<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:elevation="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Converte"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:background="#FBFBFB"
            app:cardCornerRadius="10dp"
            app:cardElevation="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="74dp"
            android:layout_marginEnd="24dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:srcCompat="@drawable/logoes" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardvelocidad"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="55dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="9dp"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toStartOf="@+id/cardvolume"
        app:layout_constraintStart_toEndOf="@+id/cardTemp"
        app:layout_constraintTop_toBottomOf="@+id/cardTemp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textvelocid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Velocidad"

                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/imgvelocid"
                app:layout_constraintStart_toStartOf="@+id/imgvelocid"
                app:layout_constraintTop_toBottomOf="@+id/imgvelocid" />

            <View
                android:id="@+id/divider222"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/textvelocid"
                app:layout_constraintEnd_toEndOf="@+id/imgvelocid"
                app:layout_constraintStart_toStartOf="@+id/imgvelocid"
                app:layout_constraintTop_toBottomOf="@+id/imgvelocid" />

            <ImageView
                android:id="@+id/imgvelocid"
                android:layout_width="62dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_speed" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardlongi"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:elevation="9dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toStartOf="@+id/cardMasa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Longitud"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/imglongi"
                app:layout_constraintStart_toStartOf="@+id/imglongi"
                app:layout_constraintTop_toBottomOf="@+id/imglongi" />

            <View
                android:id="@+id/divider"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/imglongi"
                app:layout_constraintStart_toStartOf="@+id/imglongi"
                app:layout_constraintTop_toBottomOf="@+id/imglongi" />

            <ImageView
                android:id="@+id/imglongi"
                android:layout_width="62dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/longi" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardMasa"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:elevation="9dp"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardlongi"
        app:layout_constraintTop_toTopOf="@+id/cardlongi">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textMasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Masa"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/imgmasa"
                app:layout_constraintStart_toStartOf="@+id/imgmasa"
                app:layout_constraintTop_toBottomOf="@+id/imgmasa" />

            <View
                android:id="@+id/divider2"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/textMasa"
                app:layout_constraintEnd_toEndOf="@+id/imgmasa"
                app:layout_constraintStart_toStartOf="@+id/imgmasa"
                app:layout_constraintTop_toBottomOf="@+id/imgmasa" />

            <ImageView
                android:id="@+id/imgmasa"
                android:layout_width="62dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/masa" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTemp"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="55dp"
        android:elevation="9dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toStartOf="@+id/cardvolume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardMasa">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/divider3"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/textTemp"
                app:layout_constraintEnd_toEndOf="@+id/imgTemp"
                app:layout_constraintStart_toStartOf="@+id/imgTemp"
                app:layout_constraintTop_toBottomOf="@+id/imgTemp" />

            <TextView
                android:id="@+id/textTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Temperatura"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/imgTemp"
                app:layout_constraintStart_toStartOf="@+id/imgTemp"
                app:layout_constraintTop_toBottomOf="@+id/imgTemp" />

            <ImageView
                android:id="@+id/imgTemp"
                android:layout_width="62dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/temperatura" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardvolume"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:elevation="9dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardTemp"
        app:layout_constraintTop_toTopOf="@+id/cardTemp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textvolum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Volumen"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/imgvolume"
                app:layout_constraintStart_toStartOf="@+id/imgvolume"
                app:layout_constraintTop_toBottomOf="@+id/imgvolume" />

            <View
                android:id="@+id/divider22"
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/textvolum"
                app:layout_constraintEnd_toEndOf="@+id/imgvolume"
                app:layout_constraintStart_toStartOf="@+id/imgvolume"
                app:layout_constraintTop_toBottomOf="@+id/imgvolume" />

            <ImageView
                android:id="@+id/imgvolume"
                android:layout_width="62dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                android:src="@drawable/ic_vol"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>